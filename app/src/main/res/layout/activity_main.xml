<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/limpia"
        android:layout_width="98dp"
        android:layout_height="156dp"
        android:onClick="onClickLimpia"
        android:text="AC"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_column="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/campoNumero"
        app:layout_row="0"
        tools:layout_editor_absoluteY="17dp" />

    <TextView
        android:id="@+id/campoNumero"
        android:layout_width="299dp"
        android:layout_height="157dp"
        android:onClick="onclickOperacionCapturaNumero1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="80sp"
        app:layout_column="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_row="0"
        tools:layout_editor_absoluteY="16dp"
        tools:text="2" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="404dp"
        android:layout_height="516dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/num7"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn7"
            android:text="7"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/num8"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn8"
            android:text="8"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num9"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn9"
            android:text="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/div"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickDiv"
            android:text="/"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num1"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn1"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/num2"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn2"
            android:text="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num3"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn3"
            android:text="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/res"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickRest"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num0"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn0"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/punto"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtnPunto"
            android:text="."
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sum"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickSuma"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/igual"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickIgual"
            android:text="="
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num4"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn4"
            android:text="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/num5"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn5"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num6"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickBtn6"
            android:text="6"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mult"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:onClick="onClickMulti"
            android:text="*"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>